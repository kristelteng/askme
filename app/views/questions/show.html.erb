<!-- QUESTIONS SECTION -->
<div class="question-title">
  <%= @question.title %>
</div>

<div class="author">
  <em>- <%= @question.user.email %> -</em><hr>
</div>


<% @question.answers.order('id desc').each do |answer| %>
  <p>
    <% if answer.user != nil %>
      
      <div class="author">
        <em>- <%= answer.user.email %> answered on <%= answer.created_at.strftime("%d %b. %Y %H:%M") %>- </em>
      </div>
      
      <div class="answer-body">
        <%= answer.body %><hr>
      </div>
    <% end %>
  </p>
<% end %>


<!-- ANSWERS SECTION -->
<% if current_user %>

  <%= form_for([@question, @answer]) do |f| %>
    
    <% if @answer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this review from being saved: </h2>

        <ul>
        <% @answer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


<!-- COMMENT BOX -->
    <div class="row">
        <div class="field">
          <%= f.label :any_comments?, class: 'label-field' %><br>
          <%= f.text_area :body, class: 'form-control', placeholder: "Enter a comment here" %>  
        </div><!-- /field -->
         
        <%= f.submit "answer", class: 'btn btn-default' %>  

        <!-- submit box not align properly      -->
    </div><!-- /row -->
  <% end %>

<!-- MUST SIGN IN TO LEAVE A COMMENT -->
<% else %>
  <p><%= link_to "comment", new_session_path %> </p>
<% end %>


<!-- DELETE QUESTION -->
<% if current_user && current_user == @question.user %>
   <%= link_to 'Destroy question', question_path, method: :delete, data: {confirm: 'Delete the question?'} %>
  <%= link_to 'Edit question', edit_question_path %>
<% end %>


