<h3>Question: <%= @question.title %></h3>

<% @question.answers.each do |answer| %>
  <p>
    <% if answer.user != nil %>
      <em><%= answer.user.email %></em>
      answered on <%= answer.created_at.strftime("%d %b. %Y %H:%M") %><br>
      <%= answer.body %><hr>
    <% end %>
  </p>
<% end %>


<% if current_user %>

  <%= form_for([@question, @answer]) do |f| %>
    
    <% if @answer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this review from being saved: </h2>

        <ul>
        <% @answer.errors.full_messages.each do |msg|
         %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comments %><br>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit "answer" %>
    </div>
  <% end %>

<% else %>
  <p><%= link_to "comment", new_session_path %> </p>
<% end %>

