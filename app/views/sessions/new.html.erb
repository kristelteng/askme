<h1 class="main-title">Log in ?</h1>

<%= form_tag sessions_path do %>
  
  <form>
    <div class="form-group">
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
      </div>
    </div>
      
    <div class="actions">
      <%= submit_tag 'log in', class: 'btn btn-primary' %>
    </div>
  </form>
<% end %>
