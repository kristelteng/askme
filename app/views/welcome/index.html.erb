<!-- Question Box -->
<h1>ask me</h1>
<p>usually answered in minutes!</p>

<%= form_for :question, url: questions_path do |f| %>
  
  <div class="field">
    <%= f.text_area :title, placeholder: "What's up?" %>
  </div>

  <div class= "actions" %>
    <%= f.submit "submit" %>
  </div>
<% end %>


<!-- listing articles -->
<h1>list of questions</h1>

<% @questions.each do |question| %>
  <strong>Title:</strong>
  <%= link_to question.title, question_path(question) %><br><hr>
<% end %>

