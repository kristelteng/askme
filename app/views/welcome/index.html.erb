<!-- Question Box -->
<!-- create a div --> 
<h1 class="ask-me">ask me</h1>
<p class="tagline">usually answered in minutes!</p><hr>


<%= form_for :question, url: questions_path do |f| %>
  <div class="row">
      <%= f.label :Questions?, class: 'label-field' %>
      <div class="input-group">
        <%= f.text_field :title, class: 'form-control', placeholder: "Ask a question" %>

        <span class="input-group-btn">
          <%= f.submit "submit", class: 'btn btn-primary' %>    
        </span>
      </div><!-- /input-group -->
  </div><!-- /row -->
<% end %>



<!-- listing articles -->
 <% @questions.order("id desc").each do |question| %>
  <div class="question-title">
    <%= link_to question.title, question_path(question), class: 'title' %>
  </div>

  <div class="author">
    <em>- <%= question.user.email %> - <%= question.created_at.strftime("%d %b. %Y %H:%M") %></em>
  </div>

  <div class="answer-count">
    Answers(<%= question.answers.count %>)
  </div>

  <% question.answers.order('id desc').limit(1).each do |answer| %>
      <div class="answer-body">
        <%= answer.body.truncate(200) %>
      </div>
      <div class="author">
        <em>- <%= answer.user.email %> answered on <%= answer.created_at.strftime("%d %b. %Y %H:%M") %>- </em>
      </div>
  <% end %>
  <hr>
<% end %>

    